                            <script>
                            document.querySelector('#productForm').addEventListener('submit', function (e) {
    e.preventDefault(); // Prevent the form from submitting

    var product_name = document.querySelector('input[name="name"]').value.trim();
    var product_brand = document.querySelector('input[name="brand"]').value;
    var product_description = document.querySelector('textarea[name="description"]').value.trim();
    var regular_price = parseFloat(document.querySelector('input[name="r_price"]').value);
    var sales_price = parseFloat(document.querySelector('input[name="s_price"]').value);
    var stock = parseFloat(document.querySelector('input[name="stock"]').value);

    // Check if product_name is empty
    var nameRegex = /^[A-Za-z\s]+/;
    if (!nameRegex.test(product_name)) {
        alert("Product Name should contain alphabetic characters only.");
        return false; // Prevent form submission
    }

    // Check if product_brand is not empty
    if (product_brand === "") {
        alert("Please select a Product Brand.");
        return false; // Prevent form submission
    }

    // Validation for regular_price and sales_price (positive numbers)
    if (isNaN(regular_price) || regular_price <= 0) {
        alert("Regular Price must be a valid positive number.");
        return false; // Prevent form submission
    }

    if (isNaN(sales_price) || sales_price <= 0) {
        alert("Sales Price must be a valid positive number.");
        return false; // Prevent form submission
    }

    if (sales_price > regular_price) {
        alert("Sales Price should not be higher than Regular Price.");
        return false; // Prevent form submission
    }

    // Validation for stock (non-negative number)
    if (isNaN(stock) || stock < 0) {
        alert("Stock must be a valid non-negative number.");
        return false; // Prevent form submission
    }

    // All fields are valid, allow form submission
    e.target.submit(); // Submit the form
});
