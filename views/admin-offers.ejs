      <section class="content-main">
        <div class="content-header">
          <div>
            <h2 class="content-title card-title">Offer Management</h2>
            <p>Manage the offers</p>
            <button class="btn btn-primary btn-sm rounded">
              <a style="color: aliceblue" href="/admin/addoffer">Add offer</a>
            </button>
          </div>
          <div>
            <input
              type="text"
              placeholder="Search order ID"
              class="form-control bg-white"
            />
          </div>
        </div>
        <div class="card mb-4">
          <header class="card-header">
            <div class="row gx-3">
              <div class="col-lg-4 col-md-6 me-auto">
                <input
                  type="text"
                  placeholder="Search..."
                  class="form-control"
                />
              </div>
              <div class="col-lg-2 col-6 col-md-3">
                <select class="form-select">
                  <option>Status</option>
                  <option>Active</option>
                  <option>Disabled</option>
                  <option>Show all</option>
                </select>
              </div>
              <div class="col-lg-2 col-6 col-md-3">
                <select class="form-select">
                  <option>Show 20</option>
                  <option>Show 30</option>
                  <option>Show 40</option>
                </select>
              </div>
            </div>
          </header>
          <!-- card-header end// -->

          <div class="card-body">
            <div class="table-responsive">
              <% if (!offers) { %>
              <h5>Currently there are no offers to show...</h5>
              <% } else { %>
              <table class="table table-hover">
                <thead>
                  <tr>
                    <!-- <th scope="col">Sl.no</th> -->
                    <th scope="col">Code type</th>
                    <th scope="col">Coupon Name</th>
                    <th scope="col">Discount Value</th>
                    <th scope="col">Expiration Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% offers.forEach((offer) => { %>
                  <tr>
                    <!-- <td></td> -->
                    <td><%= offer.offerName %></td>
                    <td><%=offer.offerType%></td>
                    <td><%= offer.offerAmount %></td>
                    <td><%= offer.endDate.toLocaleDateString('en-US') %></td>
                    <td><%= offer.status %></td>
                    <td class="">
                      <a
                        href="/admin/edit-offer/<%= offer._id %>"
                        class="btn btn-md rounded font-sm"
                        >Edit</a
                      >

                      <% if (offer.status =="Inactive") { %>
                      <a
                        href="/admin/unblock-offer/<%= offer._id %>"
                        class="btn btn-success"
                        >Unblock</a
                      >
                      <% } else { %>
                      <a
                        href="/admin/block-offer/<%= offer._id %>"
                        class="btn btn-danger"
                        >Block</a
                      >
                      <% } %>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
              <% } %>
            </div>
          </div>
        </div>
