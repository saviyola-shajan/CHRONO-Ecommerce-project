    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>



</head>
<body>
    <button><a  href="/admin/getadmin-dash">Back</a></button>
<section class="content-main">
  <div class="content-header">
    <div>
      <h2  style="margin-right: 45%;">Banner</h2>
      <p>Banner management</p>
    </div>
  </div>
  <div class="card mb-4">

    <!-- card-header end// -->
    <div class="card-body">
      <div class="row gx-3">
        <div class="col-xl-4 col-lg-6 col-md-8 col-12">
          <form method="post" action="/admin/postaddedbanner" enctype="multipart/form-data" onsubmit="return validateDates()">
            <div class="mb-4">
              <label for="description" class="form-label">Description</label>
              <input
                type="text"
                placeholder="Type here"
                class="form-control"
                id="description"
                name="description"
              />
            </div>
            <div class="mb-4">
              <label for="startDate" class="form-label">Start Date</label>
              <input
                type="date"
                placeholder="Type here"
                class="form-control"
                id="startDate"
                name="startDate"
                required
              />
            </div>
            <div class="mb-4">
              <label for="endDate" class="form-label">End Date</label>
              <input
                type="date"
                placeholder="Type here"
                class="form-control"
                id="endDate"
                name="endDate"
                required
              />
            </div>
            <div class="mb-4">
              <label class="form-label">Status</label>
              <select class="form-select" name="status">
                  <option value=Active>Active</option>
                  <option value=Inactive> Inactive</option>
              </select>
          </div>
      <div class="mb-4">
                                    <label class="form-label">Photo</label>
                                    <input type="file" name="photo" accept="image/*" required />
                                </div>
            <div class="d-grid">
              <button class="btn btn-primary" type="submit">
                Create Banner
              </button>
            </div>
          </form>
        </div>
        
        <%if(banners){%>
            <% banners.forEach((banner) => { %>
            <div class="col-xl-4 col-lg-6 col-md-8 col-12">
              <figure class="card border-1">
                <div class="card-header bg-white text-center">
                  <img
                    height="100p"
                    src="/<%=banner.photo%>"
                    alt="Logo"
                  />
                </div>
                <figcaption class="card-body text-center">
                  <h6 class="card-title m-0">Description : <%= banner.description%></h6>
                  <a href="#">Start Date : <%= new Date(banner.startDate).toLocaleDateString()%> </a><br>
                  <a href="#">End Date : <%= new Date(banner.endDate).toLocaleDateString() %> </a><br>
                    <h5 class="badge rounded-pill alert-danger"><%=banner.status%></h5>
                  
                </figcaption>
                <div class="d-flex justify-content-between ">
                 <a href="/admin/editbanner?bannerId=<%=banner._id%>" class="btn btn-lg font-sm btn-success rounded">Edit</a>
                  <%if(banner.status=="Inactive"){%>
                    <a href="/admin/unblockbanner/<%=banner._id%>" class="btn btn-lg font-sm btn-success rounded">Unblock</a>
                  <%} else{%>
                    <a href="/admin/blockbanner/<%=banner._id%>" class="btn btn-lg font-sm btn-danger rounded">Block</a>
                  <%}%>
                </div>
              </figure>
            </div>
            <%})%>
            <%} else {%>
          <div class="col-xl-2 col-lg-3 col-md-4 col-6">
            <h4>No Banner Found</h4>
          </div>
            <%}%>
      </div>
    </div>
  </div>

</section>

<script>
  function validateDates() {
    // Get input values
    var description = document.getElementById("description").value.trim();
    var startDate = new Date(document.getElementById("startDate").value);
    var endDate = new Date(document.getElementById("endDate").value);
    var status = document.querySelector('select[name="status"]').value;
    var photo = document.querySelector('input[name="photo"]').value;
  
    // Check if the description field is empty after trimming
    if (description === "") {
      alert("Description field cannot be empty.");
      return false; // Prevent form submission
    }
  
    // Check if the end date is greater than the start date
    if (endDate <= startDate) {
      alert("End date must be greater than the start date.");
      return false; // Prevent form submission
    }
  
    // Check if a banner image is selected
    if (photo === "") {
      alert("Please select a banner image.");
      return false; // Prevent form submission
    }
  
    // All fields are valid, allow form submission
    return true;
  }
  </script>
  
  
  
<!-- content-main end// -->
</body>
</html>