<section class="content-main">
  <div class="content-header">
    <div>
      <h2  style="margin-right: 45%;">Edit Banner</h2>
    </div>
  </div>
  <div class="card mb-4">

<div class="card-body">
    <div class="row gx-3">
      <div class="col-xl-4 col-lg-6 col-md-8 col-12">
        <form method="post" action="/admin/posteditedbanner/<%=banner._id%>" enctype="multipart/form-data" onsubmit="return validateDates()">
          <div class="mb-4">
            <input type="hidden" value="<%=banner._id%>" name="banner">
            <label for="description" class="form-label">Description</label>
            <input
              type="text"
              placeholder="Type here"
              class="form-control"
              id="description"
              value="<%=banner.description%>"
              name="description"
            />
          </div>
          <div class="mb-4">
            <label for="startDate" class="form-label">Start Date</label>
            <input
              type="date"
              placeholder="Type here"
              class="form-control"
              id="startDate"
              value="<%=banner.startDate.toLocaleDateString('en-CA')%>"
              name="startDate"
              required
            />
          </div>
          <div class="mb-4">
            <label for="endDate" class="form-label">End Date</label>
            <input
              type="date"
              placeholder="Type here"
              class="form-control"
              value="<%=banner.endDate.toLocaleDateString('en-CA')%>"
              id="endDate"
              name="endDate"
              required
            />
          </div>
          <!-- <div class="mb-4">
            <label class="form-label">Status</label>
            <select class="form-select" name="status">
                <option value=Active> True</option>
                <option value=Inactive> False </option>
            </select>
        </div> -->
    <div class="mb-4">
        <div class="input-upload">
            <img src="/<%= banner.photo%>" alt="">
            <input class="form-control" type="file" name="photo">
        </div>
        <!-- <div class="mb-4">
            <label class="form-label">Photo</label>
            <input type="file" name="photo" accept="image/*" required />
        </div> -->
          <div class="d-grid">
            <button class="btn btn-primary" type="submit">
              Add Banner
            </button>
          </div>
        </form>
      </div>
    </div>
    </div>
    </div>
    </section>
    <script>
        function validateDates() {
          // Get input values
          var description = document.getElementById("description").value.trim();
          var startDate = new Date(document.getElementById("startDate").value);
          var endDate = new Date(document.getElementById("endDate").value);
          var status = document.querySelector('select[name="status"]').value;
          var photo = document.querySelector('input[name="photo"]').value;
        
          // Check if the description field is empty after trimming
          if (description === "") {
            alert("Description field cannot be empty.");
            return false; // Prevent form submission
          }
        
          // Check if the end date is greater than the start date
          if (endDate <= startDate) {
            alert("End date must be greater than the start date.");
            return false; // Prevent form submission
          }
        
          // Check if a banner image is selected
          if (photo === "") {
            alert("Please select a banner image.");
            return false; // Prevent form submission
          }
        
          // All fields are valid, allow form submission
          return true;
        }
        </script>
        
